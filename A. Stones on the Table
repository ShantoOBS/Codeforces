#include<bits/stdc++.h>
using namespace std;
int main()
{
    
    int n;
    cin>>n;
    string s="";
 
    int c=0;
    for(int i=0;i<n;i++){
        char ch;
        cin>>ch;
       s.push_back(ch);
    }
    
    for(int i=1;i<s.length();i++){
         if(s[i]==s[i-1]){
            c++;
        }
    }
    
    cout<<c;
}
