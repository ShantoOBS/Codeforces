#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    
    while(t--){
        int n;
        cin>>n;
        string s="";
        for(int i=0;i<n;i++){
            
            char ch;
            cin>>ch;
            s.push_back(ch);
        
            
        }
        int c=0;
        for(int i=0;i<n;i++){
            if(s[i]=='-'){
                c=c+(-1);
            }
            else{
                c=c+1;
            }
            
        }
        cout<<abs(c)<<endl;
        
    }
}
