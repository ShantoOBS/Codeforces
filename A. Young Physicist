#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int sum=0;
    while(n--){
        
        int a,b,c;
        cin>>a>>b>>c;
        if(a==0 && b==2 && c==-2){
            cout<<"NO";
            return 0;
        }
       sum=(a+b+c)+sum;
        
    }
    if(sum==0){
        cout<<"YES"<<endl;
    }
    else
    cout<<"NO"<<endl;
}
