#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int police=0,crime=0;
    vector<int>v;
    for(int i=0;i<n;i++){
        int m;
        cin>>m;
        v.push_back(m);
       
       if(v[i]==-1){
           if(police==0){
               crime++;
           }
           else{
               police--;
           }
           
       } 
       else{
           police+=v[i];
       }
    }
  
    
    
    
    
    cout<<crime;
        
      
    
}
